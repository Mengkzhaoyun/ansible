[Unit]
Description=kubelet
Documentation=https://kubernetes.io
Requires=docker.service
After=docker.service
[Service]
Environment=PATH=/bin:/opt/bin:/usr/bin:/usr/sbin:/sbin:$PATH

ExecStartPre=/usr/bin/mkdir -p /etc/kubernetes/data
ExecStartPre=/usr/bin/mkdir -p /etc/kubernetes/manifests
ExecStartPre=/usr/bin/mkdir -p /var/log/containers
ExecStartPre=/usr/bin/mkdir -p /etc/cni/net.d
ExecStartPre=-/usr/bin/rkt rm --uuid-file=/etc/kubernetes/data/kubelet-pod.uuid

Environment=KUBELET_IMAGE=/etc/kubernetes/downloads/{{ RKT_ACI_KUBELET }}.aci
Environment="RKT_GLOBAL_ARGS=--insecure-options=image" 
Environment="KUBELET_IMAGE_ARGS=--name=k8s-kubelet --exec=/kubelet"
Environment="RKT_OPTS=--uuid-file-save=/etc/kubernetes/data/kubelet-pod.uuid \
  --volume var-log,kind=host,source=/var/log \
  --mount volume=var-log,target=/var/log \
  --volume dns,kind=host,source=/etc/resolv.conf \
  --mount volume=dns,target=/etc/resolv.conf"

ExecStart=/etc/kubernetes/scripts/kubelet.sh \
  --kubeconfig=/etc/kubernetes/config/kubelet.yaml \
  --register-node=true \
  --anonymous-auth=false \
  --authentication-token-webhook \
  --allow-privileged=true \
  --pod-manifest-path=/etc/kubernetes/manifests \
  --hostname-override={{ HOST_IP }} \
  --cluster-dns={{ K8S_DNS_SERVICE_IP }} \
  --cluster-domain=cluster.local \
  --hairpin-mode promiscuous-bridge \
  --network-plugin=cni \
  --cni-conf-dir=/etc/cni/net.d \
  --cni-bin-dir=/opt/cni/bin \
  --fail-swap-on=false \
  --feature-gates=MountPropagation=true \
  --pod-infra-container-image={{ REGISTRY_LOCAL }}{{ K8S_IMAGES['PAUSE']['NAME'] }}:{{ K8S_IMAGES['PAUSE']['VERSION'] }}
  
ExecStop=-/usr/bin/rkt stop --uuid-file=/etc/kubernetes/data/kubelet-pod.uuid

Restart=always
RestartSec=10
[Install]
WantedBy=multi-user.target